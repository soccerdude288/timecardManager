@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
        <script type="text/javascript">
            $("#submit").click(function() {
                var item = SHA256($("#username").val() + ":" + $("#password").val());
            $("#password").val(item);
            });

            $("#createUser").click(function() {
                var item = SHA256($("#createUserUserName").val() + ":" + $("#createUserPassword").val());
                $("#createUserPassword").val(item);
	            
            });
	        $(function() {
                $("#fullName").attr('data-bind', value: fullName, valueUpdate: "afterkeydown");
	            $("#createUserUserName").attr('data-bind', value: username, valueUpdate: "afterkeydown");
	            $("#createUserPassword").attr('data-bind', value: password, valueUpdate: "afterkeydown");
	            $("#createUser").attr('data-bind', 'submit: saveUser:');
            });


	           
    </script>

    <div class="container">
            <table class="table">
                <tr>
                    <td>
                    </td>
                    <td>
                        <h3>Login - Time Card Manager</h3>
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Create New User</button>
                    </td>
                </tr>
            </table>
            <form method="post"> 
                <fieldset>
                    <table class="table">
                        <tr>
                            <td>
                                <label for>Username: </label>
                            </td>
                            <td>
                                <input type="text" id="username" name="username">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for>Password: </label>
                            </td>
                            <td>
                                <input type="password" id="password" name="password">
                            </td>
                        </tr>   
                        <tr>
                            <td colspan="2">
                                <button type="submit" class="btn btn-primary" id="submit" name="submit">Submit</button>
                            </td>   
                        </tr>
                    </table>    
                </fieldset>
            </form>
        </div>

        <!-- Create User Modal -->
        <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create New User</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
              <form method="post"> 
                <fieldset>
                    <table class="table">
                        <tr>
                            <td>
                                <label for>Full Name: </label>
                            </td>
                            <td>
                                <input type="text" id="fullName" name="fullName">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for>Username: </label>
                            </td>
                            <td>
                                <input type="text" id="createUserUserName" name="createUserUserName">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for>Password: </label>
                            </td>
                            <td>
                                <input type="password" id="createUserPassword" name="createUserPassword">
                            </td>
                        </tr>   
                        <tr>
                            <td colspan="2">
                                <button type="button" class="btn btn-primary" id="createUser" name="save">Create Account</button>
                            </td>   
                        </tr>
                    </table>    
                </fieldset>
            </form>
            </div>
          </div>
        </div>
        </div>